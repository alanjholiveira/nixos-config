# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
